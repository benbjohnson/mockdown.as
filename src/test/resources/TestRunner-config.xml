<flex-config>
	<output>../../../target/test/TestRunner.swf</output>
	<target-player>10.0.0</target-player>
	<benchmark>false</benchmark>
	<warnings>true</warnings>

	<compiler>
		<debug>true</debug>
		<allow-source-path-overlap>true</allow-source-path-overlap>
		
		<source-path>
			<path-element>../../main/actionscript</path-element>
			<path-element>../actionscript</path-element>
			<path-element>../flex</path-element>
		</source-path>

		<library-path append="true">
			<path-element>../../../libs/FlexUnit4.swc</path-element>
			<path-element>../../../libs/FlexUnit4CIListener.swc</path-element>
			<path-element>../../../libs/FlexUnit4UIRunner.swc</path-element>
			<path-element>../../../libs/mock4as.swc</path-element>
		</library-path>
		
		<verbose-stacktraces>true</verbose-stacktraces>
		<headless-server>true</headless-server>
	</compiler>
</flex-config>
